
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Master user profile and account information.",
      "properties": {
        "uid": { "type": "string", "description": "Firebase UID - primary key" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "fullName": { "type": "string", "description": "Concatenated for search" },
        "email": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "profilePhotoURL": { "type": "string", "format": "uri" },
        "dateOfBirth": { "type": "string", "format": "date-time" },
        "gender": { "type": "string", "enum": ["Male", "Female", "Other", "Prefer not to say"] },
        "maritalStatus": { "type": "string", "enum": ["Single", "Married", "Widow/Widower", "Divorced"] },
        "district": { "type": "string" },
        "mandal": { "type": "string" },
        "village": { "type": "string" },
        "address": { "type": "string" },
        "pinCode": { "type": "string" },
        "state": { "type": "string" },
        "isAPResident": { "type": "boolean" },
        "aadhaarNumber": { "type": "string" },
        "aadhaarVerified": { "type": "boolean" },
        "ratioCardNumber": { "type": "string" },
        "ratioCardType": { "type": "string" },
        "casteCategory": { "type": "string", "enum": ["SC", "ST", "BC", "OBC", "General", "Minority"] },
        "religionCategory": { "type": "string" },
        "disabilityStatus": { "type": "string", "enum": ["None", "Physical", "Visual", "Hearing", "Intellectual", "Chronic"] },
        "disabilityPercentage": { "type": "number" },
        "disabilityId": { "type": "string" },
        "accountCreatedAt": { "type": "string", "format": "date-time" },
        "lastLoginAt": { "type": "string", "format": "date-time" },
        "secondLastLoginAt": { "type": "string", "format": "date-time" },
        "loginCount": { "type": "number" },
        "lastProfileUpdateAt": { "type": "string", "format": "date-time" },
        "accountStatus": { "type": "string", "enum": ["active", "inactive", "suspended", "deleted"] },
        "annualFamilyIncome": { "type": "number" },
        "incomeProofType": { "type": "string" },
        "incomeVerified": { "type": "boolean" },
        "bankAccountNumber": { "type": "string" },
        "bankName": { "type": "string" },
        "bankBranch": { "type": "string" },
        "ifscCode": { "type": "string" },
        "accountHolderName": { "type": "string" },
        "aadharBankLinked": { "type": "boolean" },
        "upiId": { "type": "string" },
        "highestQualification": { "type": "string", "enum": ["Illiterate", "10th", "12th", "Diploma", "Bachelor", "Master", "PhD"] },
        "isCurrentlyStudent": { "type": "boolean" },
        "institutionName": { "type": "string" },
        "institutionType": { "type": "string", "enum": ["Government", "Government-aided", "Private"] },
        "courseEnrolled": { "type": "string" },
        "courseStream": { "type": "string" },
        "yearOfStudy": { "type": "number" },
        "enrollmentNumber": { "type": "string" },
        "studyCertificateURL": { "type": "string", "format": "uri" },
        "employmentStatus": { "type": "string", "enum": ["Employed-Govt", "Employed-Private", "Self-employed", "Student", "Unemployed", "Farmer", "Business", "Daily-wage"] },
        "employerName": { "type": "string" },
        "employerType": { "type": "string" },
        "occupationType": { "type": "string" },
        "incomeFromEmployment": { "type": "number" },
        "landHoldingWet": { "type": "number" },
        "landHoldingDry": { "type": "number" },
        "landHoldingTotal": { "type": "number" },
        "surveyNumbers": { "type": "array", "items": { "type": "string" } },
        "hasVehicle": { "type": "boolean" },
        "vehicleType": { "type": "string", "enum": ["None", "2-wheeler", "4-wheeler", "Tractor", "Auto", "Taxi"] },
        "vehicleRegistrationNumber": { "type": "string" },
        "housingStatus": { "type": "string", "enum": ["Own", "Rented", "Govt-housing", "Family", "None"] },
        "houseLandSqft": { "type": "number" },
        "assets": {
          "type": "object",
          "properties": {
            "tv": { "type": "boolean" },
            "refrigerator": { "type": "boolean" },
            "washingMachine": { "type": "boolean" },
            "twoWheeler": { "type": "boolean" },
            "fourWheeler": { "type": "boolean" },
            "computerLaptop": { "type": "boolean" },
            "waterPump": { "type": "boolean" }
          }
        },
        "eligibilityAssessmentId": { "type": "string" },
        "eligibilityLastUpdatedAt": { "type": "string", "format": "date-time" },
        "qualifyingSchemes": { "type": "array", "items": { "type": "string" } },
        "appliedSchemes": { "type": "array", "items": { "type": "string" } },
        "approvedSchemes": { "type": "array", "items": { "type": "string" } },
        "favoriteSchemes": { "type": "array", "items": { "type": "string" } },
        "schemeInterestCategories": { "type": "array", "items": { "type": "string" } },
        "emailNotificationsEnabled": { "type": "boolean" },
        "smsNotificationsEnabled": { "type": "boolean" },
        "whatsappNotificationsEnabled": { "type": "boolean" },
        "notificationLanguage": { "type": "string" },
        "schemeNotificationCategories": { "type": "array", "items": { "type": "string" } },
        "doNotDisturbHours": {
          "type": "object",
          "properties": {
            "startTime": { "type": "string" },
            "endTime": { "type": "string" }
          }
        },
        "appVersion": { "type": "string" },
        "deviceType": { "type": "string" },
        "lastAccessedDevice": { "type": "string" },
        "referralCode": { "type": "string" },
        "referredBy": { "type": "string" },
        "dataConsent": { "type": "boolean" },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["uid", "email"]
    },
    "GovernmentScheme": {
      "title": "GovernmentScheme",
      "type": "object",
      "description": "Master list of all government schemes.",
      "properties": {
        "schemeId": { "type": "string" },
        "schemeName": { "type": "string" },
        "shortName": { "type": "string" },
        "description": { "type": "string" },
        "fullDescription": { "type": "string" },
        "category": { "type": "string" },
        "subCategory": { "type": "string" },
        "department": { "type": "string" },
        "launchDate": { "type": "string", "format": "date-time" },
        "lastUpdatedDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Active", "Upcoming", "Closed", "On-Hold"] },
        "applicationDeadline": { "type": "string", "format": "date-time" },
        "schemeLogo": { "type": "string", "format": "uri" },
        "benefitAmount": { "type": "number" },
        "benefitCurrency": { "type": "string" },
        "benefitFrequency": { "type": "string" },
        "totalBenefitAmount": { "type": "number" },
        "durationInMonths": { "type": "number" },
        "nonFinancialBenefits": { "type": "array", "items": { "type": "string" } },
        "eligibilityCriteria": {
          "type": "object",
          "properties": {
             "ageRange": { "type": "object", "properties": { "minimumAge": { "type": "number" }, "maximumAge": { "type": "number" } } },
             "incomeLimit": { "type": "number" },
             "requiredEducation": { "type": "array", "items": { "type": "string" } },
             "genderSpecific": { "type": "string" },
             "socialCategoryRequired": { "type": "array", "items": { "type": "string" } },
             "employmentStatus": { "type": "array", "items": { "type": "string" } }
          }
        },
        "applicationMode": { "type": "array", "items": { "type": "string" } },
        "applicablePortal": { "type": "string", "format": "uri" },
        "documentsRequired": { "type": "array", "items": { "type": "string" } },
        "viewCount": { "type": "number" },
        "applicationCount": { "type": "number" },
        "averageRating": { "type": "number" },
        "searchKeywords": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" },
        "lastUpdatedAt": { "type": "string", "format": "date-time" },
        "isPromoted": { "type": "boolean" }
      },
      "required": ["schemeId", "schemeName"]
    },
    "EligibilityAssessment": {
      "title": "EligibilityAssessment",
      "type": "object",
      "description": "Tracks user answers to eligibility questions.",
      "properties": {
        "assessmentId": { "type": "string" },
        "userId": { "type": "string" },
        "completedAt": { "type": "string", "format": "date-time" },
        "age": { "type": "number" },
        "gender": { "type": "string" },
        "district": { "type": "string" },
        "caste": { "type": "string" },
        "annualFamilyIncome": { "type": "number" },
        "landHoldingWet": { "type": "number" },
        "landHoldingDry": { "type": "number" },
        "housingStatus": { "type": "string" },
        "highestEducation": { "type": "string" },
        "employmentStatus": { "type": "string" },
        "qualifyingSchemes": { "type": "array", "items": { "type": "object", "properties": { "schemeId": {"type": "string"}, "schemeName": {"type": "string"}, "matchPercentage": {"type": "number"} } } }
      },
      "required": ["assessmentId", "userId", "completedAt"]
    },
    "UserApplication": {
      "title": "UserApplication",
      "type": "object",
      "description": "Track scheme applications submitted by users.",
      "properties": {
        "applicationId": { "type": "string" },
        "userId": { "type": "string" },
        "schemeId": { "type": "string" },
        "schemeName": { "type": "string" },
        "applicationDate": { "type": "string", "format": "date-time" },
        "applicationStatus": { "type": "string", "enum": ["Draft", "Submitted", "Under-Review", "Approved", "Rejected", "Appealed", "Withdrawn", "Pending-Documents"] },
        "lastStatusUpdateDate": { "type": "string", "format": "date-time" },
        "statusUpdateHistory": { "type": "array", "items": { "type": "object", "properties": { "date": {"type": "string", "format": "date-time"}, "status": {"type": "string"}, "notes": {"type": "string"} } } }
      },
      "required": ["applicationId", "userId", "schemeId", "applicationDate", "applicationStatus"]
    },
    "SchemeUpdate": {
      "title": "SchemeUpdate",
      "type": "object",
      "description": "Track new and updated scheme information.",
      "properties": {
        "updateId": { "type": "string" },
        "schemeId": { "type": "string" },
        "updateTitle": { "type": "string" },
        "updateType": { "type": "string" },
        "updateDate": { "type": "string", "format": "date-time" },
        "description": { "type": "string" }
      },
      "required": ["updateId", "schemeId", "updateTitle", "updateDate"]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "collections": [
      {
        "path": "/users/{userId}",
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Master user profile and account information"
      },
      {
        "path": "/schemes/{schemeId}",
        "schema": { "$ref": "#/entities/GovernmentScheme" },
        "description": "Master list of all government schemes"
      },
      {
        "path": "/eligibilityAssessments/{assessmentId}",
        "schema": { "$ref": "#/entities/EligibilityAssessment" },
        "description": "Track user answers to eligibility questions"
      },
      {
        "path": "/userApplications/{applicationId}",
        "schema": { "$ref": "#/entities/UserApplication" },
        "description": "Track scheme applications submitted by users"
      },
      {
        "path": "/schemeUpdates/{updateId}",
        "schema": { "$ref": "#/entities/SchemeUpdate" },
        "description": "Track new and updated scheme information"
      }
    ]
  }
}
