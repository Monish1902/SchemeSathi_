
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own data
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId && 
                       (request.resource.data.accountCreatedAt == resource.data.accountCreatedAt); // Prevent modification of creation time
    }
    
    // Schemes are readable by all authenticated users
    match /schemes/{schemeId} {
      allow read: if request.auth.uid != null;
      allow write: if false; // Disallow client-side writes
    }
    
    // Eligibility assessments belong to specific users
    match /eligibilityAssessments/{assessmentId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    
    // User applications
    match /userApplications/{applicationId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    
    // Scheme updates are readable by all authenticated users
    match /schemeUpdates/{updateId} {
      allow read: if request.auth.uid != null;
      allow write: if false; // Disallow client-side writes
    }
  }
}
